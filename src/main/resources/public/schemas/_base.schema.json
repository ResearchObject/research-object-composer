{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "Metadata": {
      "type": "object",
      "default" : {
        "title" : null,
        "description" : null,
        "creators" : []
      },
      "properties": {
        "title": {
          "type": "string",
          "minLength": 3
        },
        "description": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "creators": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Author"
          },
          "minItems": 1
        }
      },
      "required": [
        "title",
        "description",
        "creators"
      ]
    },
    "Author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "examples": [
            "Doe, Jane"
          ]
        },
        "affiliation": {
          "type": "string",
          "examples": [
            "University of Life"
          ]
        },
        "orcid": {
          "type": "string",
          "pattern" : "^https?\\:\\/\\/orcid\\.org\\/[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{3}[xX0-9]$",
          "examples": [
            "0000-0002-1825-0097"
          ]
        }
      },
      "required": [ "name" ]
    },
    "RemoteItem": {
      "type": "object",
      "properties": {
        "length": {
          "type": "integer"
        },
        "filename": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "checksums": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Checksum"
          },
          "minItems": 1
        }
      },
      "required": [
        "length",
        "filename",
        "url",
        "checksums"
      ]
    },
    "Checksum": {
      "oneOf": [
        {
          "$ref": "#/definitions/md5sum"
        },
        {
          "$ref": "#/definitions/sha256sum"
        },
        {
          "$ref": "#/definitions/sha512sum"
        }
      ]
    },
    "md5sum": {
      "title": "MD5",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "md5"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[0-9a-f]{32}$"
        }
      }
    },
    "sha256sum": {
      "title": "SHA-256",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "sha256"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    },
    "sha512sum": {
      "title": "SHA-512",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "sha512"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[0-9a-f]{128}$"
        }
      }
    }
  }
}
